<div class="mt-70px">
    <h1>Cập nhật khoá học</h1>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group mt-3">
            <label for="nameCourse">Tên khoá học:</label>
            <input type="text" class="form-control" id="nameCourse"  placeholder="Tên khoá học..." name="name" value="{{course.name}}">
        </div>
        <div class="form-group mt-3">
            <label for="descCourse">Mô tả:</label>
            <textarea name="description" id="descCourse" class="form-control">{{course.description}}</textarea>
        </div>
        <div class="form-group mt-3">
            <label for="videoCourse">Video ID:</label>
            <input type="text" class="form-control" id="videoCourse"  placeholder="Video ID..." name="videoId" value="{{course.videoId}}">
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>
</div>
